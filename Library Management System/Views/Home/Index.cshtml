
@using Library_Management_System.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

@{
    int availableBooks = Model.BookCount - Model.LendBookCount;
}
<h1>Library management dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                Customers Count
            </div>
            <div class="card-body">
                There are @Model.CustomerCount customers
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                Authors Count
            </div>
            <div class="card-body">
                There are @Model.AuthorCount authors
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                Books count
            </div>
            <div class="card-body">
                There are @availableBooks books available out of @Model.BookCount books
            </div>
        </div>
    </div>
</div>