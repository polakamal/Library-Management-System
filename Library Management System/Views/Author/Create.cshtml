@using Library_Management_System.ViewModels;
@model CreateAuthorViewModel
<h2 class="text-info">Create new Author</h2>
<form method="post" asp-action="Create">
    @Html.HiddenFor(x=>x.Referer)
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Author.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Author.Name" class="form-control" />
            </div>
            <span asp-validation-for="Author.Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-controller="Author" asp-action="List" class="btn btn-success">Back To List</a>
        </div>
    </div>

</form>
@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}