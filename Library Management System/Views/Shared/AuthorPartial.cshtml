@using Library_Management_System.Data.Model;
@model Author

<div class="col-sm-4 col-lg-4 col-md-4">
    
        <div class="card">
            <div class="card-header ">
                <p>@Model.Name</p>
            </div>
            <div class="card-body">
                <h2>Book count: @Model.Books.Count</h2>
                <div class="btn-group">
                    @if (Model.Books.Count == 0)
                    {
                        <a class="btn btn-info" asp-area="">View book list</a>
                    }
                    else
                    {
                        <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="List" asp-route-authorId="@Model.AuthorId">View book list</a>
                    }
                    <a class="btn btn-info" asp-area="" asp-controller="Author" asp-action="Update" asp-route-id="@Model.AuthorId">Edit</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Author" asp-action="Delete" asp-route-id="@Model.AuthorId">Delete</a>
                </div>
            </div>
        </div>
   
  </div>
